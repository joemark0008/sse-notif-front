{
  "name": "@joemark0008/sse-notifications-react",
  "version": "2.0.1",
  "description": "Minimal React library for connecting to Server-Sent Events (SSE) notification servers with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build && npm run gen:types",
    "gen:types": "node scripts/generate-types.js",
    "preview": "vite preview",
    "lint": "eslint .",
    "prepublishOnly": "npm run build:lib",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "sse",
    "server-sent-events",
    "react",
    "hooks",
    "notifications",
    "real-time",
    "provider",
    "context",
    "typescript",
    "npm",
    "package",
    "minimal",
    "lightweight"
  ],
  "author": "joemark0008",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joemark0008/sse-notifications-react.git"
  },
  "bugs": {
    "url": "https://github.com/joemark0008/sse-notifications-react/issues"
  },
  "homepage": "https://github.com/joemark0008/sse-notifications-react#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
